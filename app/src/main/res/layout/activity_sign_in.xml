<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/w1"
    tools:context=".SignUpActivity"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_whatsapp"/>
        <!--        lightgrey   textColor-->
        <!--        chatbackground  texthintcolor-->


        <!--        same as above-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtEmailSignIn"
            android:ems="10"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:padding="9dp"
            />

        <!--        same as above-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPasswordSignIn"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDoNotHaveAccount"
            android:text="Don't Have Account?"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:padding="5dp"
            android:ems="30"/>


        <!--            backgroundTint - color_secondary_variable-->
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="Sign In"
            android:textAllCaps="false"
            app:cornerRadius="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            >

            <Button
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_google"
                android:text="Google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:cornerRadius="15dp"/>


            <Button
                android:id="@+id/btnfacebookSingIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_facebook"
                android:text="FaceBook"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:cornerRadius="15dp"/>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ixtSignUpPhone"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Sign Up with Phone"/>


    </LinearLayout>


</LinearLayout>